@setlocal enableextensions
@setlocal enabledelayedexpansion
@echo off

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: extract KAS_HOME
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
set "SCRIPT_HOME=%~dp0"

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: determine which JAR should be excluded from CLASS_PATH and construct it
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
for /D %%G in ("%SCRIPT_HOME%/kas-*") do (
  pushd %%G
  ant Clean
  popd
)

exit /b
