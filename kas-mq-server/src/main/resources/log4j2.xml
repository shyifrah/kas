<Configuration>
  
  <!-- ======================================================================================= -->
  <!-- Properties                                                                              -->
  <!-- ======================================================================================= -->
  <Properties>
    <Property name="logFileDir">$${sys:kas.home:.}/logs</Property>
    <Property name="logPattern">%d{DEFAULT} [%-5T] [%-5p] (%c{1}) - %m%n</Property>
    <Property name="archiveFileMaxSize">10 MB</Property>
  </Properties>
  
  <!-- ======================================================================================= -->
  <!-- Appenders                                                                               -->
  <!-- ======================================================================================= -->
  <Appenders>
  
    <Console name="Stdout">
      <PatternLayout>
        <pattern>$${logPattern}</pattern>
      </PatternLayout>
    </Console>
    
    <File name="File" fileName="${logFileDir}/kas.log" filePattern="${logFileDir}/kas.log.%d{yyyy-MM-dd-hh.mm.ss}.%i">
      <PatternLayout>
        <Pattern>$${logPattern}</Pattern>
      </PatternLayout>
      <Policies>
        <OnStartupTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="${archiveFileMaxSize}" />
        <TimeBasedTriggeringPolicy />
      </Policies>
    </File>
    
  </Appenders>
  
  <!-- ======================================================================================= -->
  <!-- Loggers                                                                                 -->
  <!-- ======================================================================================= -->
  <Loggers>
    <logger name="com" level="INFO" additivity="false">
      <AppenderRef ref="File"/>
    </logger>
    
    <Root level="INFO" additivity="false">
      <AppenderRef ref="Stdout"/>
    </Root>
  </Loggers>
  
</Configuration>