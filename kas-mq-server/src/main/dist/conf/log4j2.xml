<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  
  <!-- ======================================================================================= -->
  <!-- Properties                                                                              -->
  <!-- ======================================================================================= -->
  <Properties>
    <Property name="logPattern">%d{DEFAULT} %-5t %5p (%c{1}) - %m%n</Property>
    <Property name="fileMaxSize">10 MB</Property>
  </Properties>
  
  <!-- ======================================================================================= -->
  <!-- Appenders                                                                               -->
  <!-- ======================================================================================= -->
  <Appenders>
    <Console name="stdout">
      <PatternLayout pattern="${logPattern}" />
    </Console>
    <RollingFile name="file" fileName="../logs/kas.log" filePattern="../logs/kas.log.%d{yyyy-MM-dd-hh.mm.ss}.%i">
      <PatternLayout pattern="${logPattern}" />
      <Policies>
        <OnStartupTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="${fileMaxSize}" />
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>
  </Appenders>
  
  <!-- ======================================================================================= -->
  <!-- Loggers                                                                                 -->
  <!-- ======================================================================================= -->
  <Loggers>
    <logger name="com.kas" level="trace" additivity="false">
      <AppenderRef ref="file"/>
    </logger>
    <Root level="info" additivity="false">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>